<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imvBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/doodle" />

        <EditText
            android:id="@+id/edTInputOne"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            android:background="#00E5FF"
            android:backgroundTint="#00E5FF"
            android:ems="10"
            android:hint="𝕀𝕟𝕡𝕦𝕥"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/edTInputTwo"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="#00E5FF"
            android:backgroundTint="#00E5FF"
            android:ems="10"
            android:hint="𝕀𝕟𝕡𝕦𝕥"
            android:inputType="text"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edTInputOne"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnMath"
            android:layout_width="360dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#A67C84"
            android:text="🄲🄰🄻🄲🅄🄻🄰🅃🄴"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edTInputTwo"
            app:layout_constraintVertical_bias="0.608" />

        <TextView
            android:id="@+id/tVAnswer"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="#00E5FF"
            android:backgroundTint="#00E5FF"
            android:text="🅈🄾🅄🅁 🄰🄽🅂🅆🄴🅁 !!"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMath"
            app:layout_constraintVertical_bias="0.0" />

        <RadioGroup
            android:id="@+id/rgToggles"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#00E5FF"
            app:layout_constraintBottom_toTopOf="@+id/btnMath"
            app:layout_constraintEnd_toEndOf="@+id/imvBackground"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/imvBackground"
            app:layout_constraintTop_toBottomOf="@+id/edTInputTwo"
            app:layout_constraintVertical_bias="0.0">

            <RadioButton
                android:id="@+id/rbAdd"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:text="Addition"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/rbMinus"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:text="Subtraction"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/rbTimes"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:text="Multiplication"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/rbDivide"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:text="Division"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>